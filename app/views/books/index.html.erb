<div class="container">
  <h1>Listing Books:</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Chapter</th>
        <th>Content</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td style="text-align: center;"><%= book.chapter %></td>
          <% synops = '' %>
          <% 0.upto(80) do |i| %>
          <% synops += book.content[i] %>
          <% end %>
          <td><%= synops + "..." %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path %>

</div>